{
  "name": "mandarinko-dev",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": false
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "Continue.continue"
      ]
    }
  },
  "postCreateCommand": "mkdir -p ~/.continue && cp -f .continue/config.yaml ~/.continue/config.yaml && corepack prepare pnpm@9.15.0 --activate && pnpm install"
}
